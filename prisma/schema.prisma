generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Pilot {
  id String @id @default(uuid())

  pilot_certification String 
  name                String
  age                 Int
  credits             Float
  location_planet     String

  Ship Ship?
  
  created_at DateTime    @default(now())

  @@map("pilots")
}

model Ship {
  id String @id @default(uuid())

  fuel_capacity   Float
  fuel_level      Float
  weight_capacity Float

  pilot       Pilot        @relation(fields: [pilot_id], references: [id],onDelete: Cascade,onUpdate: Cascade)
  pilot_id    String
  created_at DateTime @default(now())

  @@map("ships")
}

model Contracts {
  id String @id @default(uuid())

  description        String
  payload            String
  origin_planet      String
  destination_planet String
  value              Float
  created_at DateTime @default(now())


  resource_id String
  resource    Resource @relation(fields: [resource_id], references: [id])

  
 
  @@map("contracts")
}

model Resource {
  id String @id @default(uuid())

  name   String
  weight Float

  contract_id Contracts[]

  created_at DateTime @default(now())

  @@map("resources")
}
